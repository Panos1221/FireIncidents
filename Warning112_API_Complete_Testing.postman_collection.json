          "// JSON response validation for data endpoints",
          "if (pm.request.url.path.includes('warnings112') || pm.request.url.path.includes('incidents') || pm.request.url.path.includes('fire-districts')) {",
          "    pm.test('Response is valid JSON', function () {",
          "        pm.response.to.be.json;",
          "    });",
          "",
          "    // Validate warnings structure",
          "    if (pm.request.url.path.includes('warnings112') && pm.response.code === 200) {",
          "        const responseJson = pm.response.json();",
