		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Global test script for all requests",
					"",
					"// Test that response time is reasonable",
					"pm.test(\"Response time is less than 10 seconds\", function () {",
					"    pm.expect(pm.response.responseTime).to.be.below(10000);",
					"});",
					"",
					"// Test that we don't get server errors (5xx)",
					"pm.test(\"No server errors\", function () {",
					"    pm.expect(pm.response.code).to.be.below(500);",
					"});",
					"",
					"// For successful responses, test JSON structure",
					"if (pm.response.code === 200) {",
					"    pm.test(\"Response is valid JSON\", function () {",
					"        pm.response.to.be.json;",
					"    });",
					"    ",
					"    // For warning list responses",
					"    if (pm.request.url.path.includes('warnings112') && !pm.request.url.path.includes('test') && !pm.request.url.path.includes('statistics') && !pm.request.url.path.includes('count')) {",
					"        pm.test(\"Response contains warning data structure\", function () {",
					"            const responseJson = pm.response.json();",
					"            if (Array.isArray(responseJson) && responseJson.length > 0) {",
					"                pm.expect(responseJson[0]).to.have.property('id');",
					"                pm.expect(responseJson[0]).to.have.property('geocodedLocations');",
					"                pm.expect(responseJson[0]).to.have.property('isActive');",
					"            }",
					"        });",
					"    }",
					"    ",
					"    // For test-tweet-content responses",
					"    if (pm.request.url.path.includes('test-tweet-content')) {",
					"        pm.test(\"Tweet content processed successfully\", function () {",
					"            const responseJson = pm.response.json();",
					"            pm.expect(responseJson).to.have.property('id');",
					"            pm.expect(responseJson).to.have.property('geocodedLocations');",
					"            pm.expect(responseJson.geocodedLocations).to.be.an('array');",
					"            ",
					"            // Check that we have valid geocoded locations",
					"            if (responseJson.geocodedLocations.length > 0) {",
					"                const location = responseJson.geocodedLocations[0];",
					"                pm.expect(location).to.have.property('latitude');",
					"                pm.expect(location).to.have.property('longitude');",
					"                pm.expect(location).to.have.property('locationName');",
					"                pm.expect(location.latitude).to.be.a('number');",
					"                pm.expect(location.longitude).to.be.a('number');",
					"            }",
					"        });",
					"    }",
					"}",
					"",
					"// Log key response data for debugging",
					"console.log(`${pm.request.method} ${pm.request.url} -> ${pm.response.code} (${pm.response.responseTime}ms)`);",
					"if (pm.response.code !== 200) {",
					"    console.log('Response body:', pm.response.text());",
					"}"
				]
