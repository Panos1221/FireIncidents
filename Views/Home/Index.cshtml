@section Scripts {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="~/js/map.js" asp-append-version="true"></script>
    <!-- RSS.app Widget Script -->
    <script src="https://widget.rss.app/v1/feed.js" type="text/javascript" async></script>

    <!--Fire Risk Map-->
    <script>
        const btnShowMap = document.getElementById('btnShowMap');
        const btnTextSpan = btnShowMap.querySelector('span[data-translate="civilmap"]');

        btnShowMap.addEventListener('click', async function () {
            btnShowMap.disabled = true;
            btnTextSpan.setAttribute('data-translate', 'loading');
            if (typeof applyTranslations === 'function') {
                applyTranslations();
            }             

            try {
                const response = await fetch('@Url.Action("GetLatestMapImageUrl", "CivilProtectionMap")');
                const data = await response.json();

                if (data.imageUrl) {
                    document.getElementById('mapImage').src = data.imageUrl;
                    var modal = new bootstrap.Modal(document.getElementById('mapModal'));
                    modal.show();
                } else {
                    alert('Failed to load the civil protection map image.');
                }
            } catch (e) {
                alert('Error loading map image.');
            }

            btnShowMap.disabled = false;
            btnTextSpan.setAttribute('data-translate', 'civilmap');
            if (typeof applyTranslations === 'function') applyTranslations();
        });

        // RSS.app Widget Fallback Detection (non-destructive, robust)
        (function () {
            function isWidgetLoaded(container) {
                if (!container) return false;
                // Consider loaded if an iframe exists (rss.app usually injects an iframe)
                if (container.querySelector('iframe')) return true;
                // Or if the custom element has any children
                const feedEl = container.querySelector('rssapp-feed');
                if (feedEl && feedEl.childNodes && feedEl.childNodes.length > 0) return true;
                // Or if the container has visible, non-empty content
                const rect = container.getBoundingClientRect();
                if (rect.height > 0 && rect.width > 0 && container.innerHTML && container.innerHTML.trim() !== '') return true;
                return false;
            }

            function waitForWidget(containerSelector, fallbackId, maxWaitMs = 15000, intervalMs = 500) {
                const container = document.querySelector(containerSelector);
                if (!container) return;

                // If already loaded, do nothing
                if (isWidgetLoaded(container)) return;

                const start = Date.now();
                const timer = setInterval(() => {
                    if (isWidgetLoaded(container)) {
                        clearInterval(timer);
                        return;
                    }
                    if (Date.now() - start >= maxWaitMs) {
                        clearInterval(timer);
                        const fb = document.getElementById(fallbackId);
                        if (fb) fb.style.display = 'block';
                    }
                }, intervalMs);

                // Also react to DOM mutations quickly
                const mo = new MutationObserver(() => {
                    if (isWidgetLoaded(container)) {
                        mo.disconnect();
                    }
                });
                mo.observe(container, { childList: true, subtree: true });
            }

            // Start checks for both widgets; do NOT hide the widget containers
            waitForWidget('#rss-feed-112greece', 'fallback-112greece');
            waitForWidget('#rss-feed-pyrosvestiki', 'fallback-pyrosvestiki');
        })();
    </script>
}