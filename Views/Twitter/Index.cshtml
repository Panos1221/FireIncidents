@{
    ViewData["Title"] = "112 Greece Twitter Feed";
    Layout = null; // No layout for scraping
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>112 Greece Twitter Feed</title>
    <style>
        body {
            margin: 0;
            padding: 20px;
            font-family: Arial, sans-serif;
        }
        .widget-container {
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
        }
        .loading {
            text-align: center;
            padding: 20px;
            color: #666;
        }
    </style>
</head>
<body>
    <div class="widget-container">
        <h2>112 Greece Emergency Warnings</h2>
        <div class="loading">Loading tweets...</div>
        
        <!-- RSS.app Twitter Widget -->
        <rssapp-feed id="bcgxFnQk0mKozyCv"></rssapp-feed>
        <script src="https://widget.rss.app/v1/feed.js" type="text/javascript" async></script>
        
        <!-- Fallback: Direct embed attempt -->
        <script>
            // Wait for RSS.app widget to load, then try to make content visible
            setTimeout(function() {
                var loadingDiv = document.querySelector('.loading');
                if (loadingDiv) {
                    loadingDiv.style.display = 'none';
                }
                
                // Log for debugging
                console.log('RSS.app widget content loaded');
            }, 5000);
        </script>
    </div>
</body>
</html>
