<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title data-translate="appTitle">Hellenic Fire Service Live Incidents Map</title>
    <link rel="icon" type="image/png" href="~/images/fire-dept-icon.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/fire-dept-icon.png" alt="Fire Incidents Icon" class="navbar-icon" />
                    <span data-translate="appTitle">Hellenic Fire Service Live Incidents Map</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @* <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-map me-1"></i>
                                <span data-translate="map">Map</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Feeds">
                                <i class="fas fa-rss me-1"></i>
                                <span data-translate="feeds">RSS Feeds</span>
                            </a>
                        </li>
                    </ul> *@
                    <!-- Language select -->
                    <div class="language-selector ms-auto">
                        <label for="languageSelector" data-translate="language">Language</label>
                        <select id="languageSelector" class="form-select form-select-sm">
                            <option value="en" data-translate="english">English</option>
                            <option value="el" data-translate="greek">Greek</option>
                        </select>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Theme toggle -->
    <button id="themeToggle" class="theme-toggle" title="Toggle Theme">
        <i class="fas fa-moon"></i>
    </button>
    <footer class="border-top footer">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <p>
                        <span data-translate="footer">&copy; 2025 - Fire Incidents Map - Hellenic Fire Service</span>
                    </p>
                    <p class="disclaimer">
                        <small data-translate="disclaimer">
                            This is an unofficial application that is not affiliated with, endorsed by, or connected to the Hellenic Fire Service.
                        </small>
                    </p>
                    <p class="disclaimer">
                        <small data-translate="locationDisclaimer">
                            All locations are approximate, as there are no official addresses or coordinates, only the municipality.
                        </small>
                    </p>
                    <p class="disclaimer">
                        <small data-translate="warning112Disclaimer">
                            112 warnings are provided for informational purposes only. Some data could not be parsed automatically. Always follow instructions from official authorities.
                        </small>
                    </p>                   
                    <div id="fireAntennaStatus" class="fire-status" title="Checking status...">
                        <span class="status-light" id="antennaStatusLight"></span>
                    </div>
                    <a href="mailto:contact@livefireincidents.gr" class="email-contact" title="Contact us">
                        <i class="fas fa-envelope"></i>
                        <span>contact@livefireincidents.gr</span>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/proj4js/2.9.0/proj4.min.js"></script>
    <script src="~/js/translations.js" asp-append-version="true"></script>
    <script src="~/js/theme.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        const antennaStatusLight = document.getElementById('antennaStatusLight');
        const antennaDiv = document.getElementById('fireAntennaStatus');

        async function checkAntennaStatus() {
            try {
                const response = await fetch('/Status/CheckFireServiceStatus');
                const data = await response.json();
                if (data.status === "up") {
                   antennaStatusLight.className = "status-light online";
                   antennaDiv.title = "The official Hellenic Fire Service Incidents Page is Online";
                } else {
                   antennaStatusLight.className = "status-light offline";
                   antennaDiv.title = "The official Hellenic Fire Service Incidents Page is DOWN";
                }
            } catch {
                antennaStatusLight.setAttribute('fill', '#dc3545'); // red
                antennaDiv.title = "The official Hellenic Fire Service Incidents Page is DOWN";
            }
        }
        checkAntennaStatus(); 
        setInterval(checkAntennaStatus, 60000);
    </script>
</body>
</html>